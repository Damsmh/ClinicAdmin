@page
@model IndexModel
@{
    ViewData["Title"] = "Clinic Administration Dashboard";
}

<!-- Подключаем Bootstrap Icons -->
<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">

<style>
    /* Основные стили */
    .dashboard-section {
        height: 50vh;
        overflow: hidden;
        margin-bottom: 1.5rem;
    }

    .dashboard-card {
        height: 100%;
        display: flex;
        flex-direction: column;
        border-radius: 0.5rem;
        box-shadow: 0 0.15rem 0.5rem rgba(0,0,0,0.1);
    }

    .card-header {
        border-bottom: 1px solid rgba(0,0,0,0.1);
        font-weight: 600;
        padding: 0.75rem 1.25rem;
    }

    .card-body {
        flex: 1;
        overflow: hidden;
        padding: 0;
    }

    .table-container {
        height: calc(100% - 40px);
        overflow-y: auto;
    }

    .table {
        margin-bottom: 0;
    }

        .table th {
            position: sticky;
            top: 0;
            background: white;
            z-index: 10;
        }

    .badge-icon {
        width: 28px;
        height: 28px;
        display: inline-flex;
        align-items: center;
        justify-content: center;
        border-radius: 50%;
        margin-right: 8px;
    }

    .action-btn {
        padding: 0.25rem 0.5rem;
        font-size: 0.875rem;
    }
</style>
<div class="container-fluid">
    <h1 class="text-center mb-4">Clinic Administration Dashboard</h1>

    <!-- Первая строка с двумя таблицами -->
    <div class="row mb-4">
        <!-- Пациенты -->
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Patients</h5>
                    <a href="#" class="btn btn-sm btn-light">+ Add</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Phone</th>
                                    <th>Birth Date</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Patients)
                                {
                                    <tr>
                                        <td>@item.FullName</td>
                                        <td>@item.Phone</td>
                                        <td>@item.BirthDate.ToString("d")</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Patients/Edit/@item.PatientId" class="btn btn-outline-primary action-btn">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Patients/Details/@item.PatientId" class="btn btn-outline-secondary action-btn">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-success text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Employees</h5>
                    <a href="#" class="btn btn-sm btn-light">+ Add</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Specialization</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Employees)
                                {
                                    <tr>
                                        <td>@item.FullName</td>
                                        <td>@item.Specialization</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Employees/Edit/@item.EmployeeId" class="btn btn-outline-success action-btn">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Employees/Details/@item.EmployeeId" class="btn btn-outline-secondary action-btn">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-info text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Services</h5>
                    <a href="#" class="btn btn-sm btn-light">+ Add</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Duration</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Services)
                                {
                                    <tr>
                                        <td>@item.Name</td>
                                        <td>@item.Price.ToString("C")</td>
                                        <td>@item.DurationMinutes min</td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Services/Edit/@item.ServiceId" class="btn btn-outline-info action-btn">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Services/Details/@item.ServiceId" class="btn btn-outline-secondary action-btn">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <div class="col-md-6">
            <div class="card shadow-sm h-100">
                <div class="card-header bg-warning text-white d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Appointments</h5>
                    <a href="#" class="btn btn-sm btn-light">+ Add</a>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                                <tr>
                                    <th>Date/Time</th>
                                    <th>Patient</th>
                                    <th>Doctor</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.Appointments)
                                {
                                    <tr>
                                        <td>@item.AppointmentDate.ToString("g")</td>
                                        <td>@item.Patient?.FullName</td>
                                        <td>@item.Employee?.FullName</td>
                                        <td>
                                            <span class="badge bg-@(item.Status == "Completed" ? "success" : "primary")">
                                                @item.Status
                                            </span>
                                        </td>
                                        <td>
                                            <div class="btn-group btn-group-sm">
                                                <a href="/Appointments/Edit/@item.AppointmentId" class="btn btn-outline-warning action-btn">
                                                    <i class="bi bi-pencil"></i>
                                                </a>
                                                <a href="/Appointments/Details/@item.AppointmentId" class="btn btn-outline-secondary action-btn">
                                                    <i class="bi bi-eye"></i>
                                                </a>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>